<h1> ✏️Edit People✏️</h1>

<%= form_for @person do |f| %>

  <h3><%= f.label :first_name %>
  <%= f.text_field :first_name %><br>
  
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :age %>
  <%= f.text_field :age %><br>
  
  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %><br>
  
  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %><br>
  
  <%= f.label :gender %>
   <%= f.select :gender, options_for_select([["🙎‍♀️"], ["‍🙎‍♂️️"]]) %><br>
  
  <%= f.label :alive %>
  <%= f.text_field :alive %><br></h3>
  
  <p class ="c_button"><%= f.submit %>
  <% end %>