<h2><button><%= link_to 'Add A New Person', new_person_path %></button></h2><br>

<h2> List of People: </h2>

<ol>
<% @people.each do |person| %>
<li>
<h3><%= person.full_name %></h3>
<h5><%= link_to 'Show Person', person_path(person)%>
<%= link_to 'Edit Person', edit_person_path(person) %>
<%= link_to 'Delete Person', person, method: :delete %></h5>

<% end %>